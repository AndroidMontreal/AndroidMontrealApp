<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.mobidroid.androidmtl" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />

	<application android:icon="@drawable/icon"
		android:debuggable="true" android:label="@string/app_name">

		<!-- Splash screen launches, passes control to home screen when done. -->
        <activity android:name=".activity.SplashScreenActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name=".activity.HomeScreenActivity"
			android:label="@string/app_name">
		</activity>

		<activity android:name=".activity.AndroidMtlSetting" 
			android:label="@string/app_name">
		</activity>

		<activity android:name=".AndroidMontrealAppActivity"
			android:label="@string/app_name">
		</activity>

	</application>


</manifest>
